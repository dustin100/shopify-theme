<section class="banner-wrapper container">
    {% for block in section.blocks %}
    <a class="bannerBlockLink" href="{{block.settings.block-url}}">
        <div class="bannerBlock">
            <div class="bannerIcon">
                {{block.settings.icon}}
            </div>
            <div class="bannerInfo">
                <h4>{{block.settings.heading}}</h4>
                <p>{{block.settings.short-text}}</p>
            </div>
        </div>
    </a>
    {% endfor %}

</section>


{% schema %}
{
"name": "Highlight Banner",
"presets": [{
"category": "Custom Content",
"name": "Highlight Banner"
}],

"blocks":[
{
"type":"text",
"name": "Banner Blocks ",
"limit": 4,
"settings": [
{
"type": "html",
"id": "icon",
"label": "FontAwesome Icon"
},
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "text",
"id": "short-text",
"label": "Short Text"
},
{
"type": "url",
"id": "block-url",
"label": "URL"
}

]
}
]

}
{% endschema %}