<div class="container">
    <nav class="navbar smart-scroll navbar-dark bg-primary justify-content-start flex-column">
        <div class="row col-12 d-flex flex-nowrap">
            <button aria-expanded="true" aria-label="Toggle navigation" class="navbar-toggler mr-3 show"
                data-target="#main_nav" data-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">Brand Name</a>
            {%include 'searchBar' %}
        </div>
        <div class="row col-12">
            <div class="collapse navbar-collapse" id="main_nav">
                <ul class="navbar-nav flex-row">
                    {% for link in linklists[section.settings.main_linklist].links %}
                    {% if link.links == blank %}
                    <li class="nav-item">
                        <a class="nav-link p-3" href="{{link.url}}">{{link.title}}</a>
                    </li>
                    {% endif %}

                    {% if link.links != blank %}
                    <li class="nav-item dropdown">
                        <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle"
                            data-toggle="dropdown" href="#" id="navbarDropdown" role="button">
                            Shop
                        </a>
                        <div aria-labelledby="navbarDropdown" class="dropdown-menu full-width">
                            <div class="row menu-row-items">
                                {% for childlink in link.links %}
                                <div class="col-4">
                                    <div class="dropdown-header">{{childlink.title}}</div>
                                    {% for sublink in childlink.links %}
                                    <div class="dropdown-divider"></div>
                                    <a href="{{sublink.url}}">{{sublink.title}}</a>
                                    {% endfor %}
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <!-- navbar-collapse.// -->
        </div>
    </nav>
</div>