<div class="container">
    <nav class="navbar smart-scroll navbar-dark bg-primary justify-content-start flex-column">
        <div class="row col-12 d-flex flex-nowrap">
            <button class="navbar-toggler mr-3 show" type="button" data-toggle="collapse" data-target="#main_nav"
                aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">Brand Name</a>
            {%include 'searchBar' %}
        </div>
        <div class="row col-12">
            <div class="collapse navbar-collapse" id="main_nav">
                <ul class="navbar-nav flex-row">
                    {% for link in linklists[section.settings.main_linklist].links %}
                    {% if link.links == blank %}
                    <li class="nav-item">
                        <a class="nav-link p-3" href="{{link.url}}">{{link.title}}</a>
                    </li>
                    {% endif %}

                    {% if link.links != blank %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Shop
                        </a>
                        <div class="dropdown-menu full-width" aria-labelledby="navbarDropdown">
                            <div class="row menu-row-items">
                                {% for childlink in link.links %}
                                <div class="col-4">
                                    <div class="dropdown-header">{{childlink.title}}</div>
                                    {% for sublink in childlink.links %}
                                    <div class="dropdown-divider"></div>
                                    <a href="{{sublink.url}}">{{sublink.title}}</a>
                                    {% endfor %}
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div> <!-- navbar-collapse.// -->
        </div>
    </nav>
</div>