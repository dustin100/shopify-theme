<h1 class="text-center p-5">{{blog.title}}</h1>

{% for article in blog.articles limit: 1 %}

    <div class="container">
        <div class="row mb-5">
            <div class="col-6 blog-post-one pr-0">
        <div class="card-body ">
           
            <h4 class="card-title">
                {{ article.title }}
            </h4>
            <blockquote class="blockquote ">
                <span class="article-date">
                    {{ article.published_at | date: "%b %d, %y" }}
                </span>
            
                <span class="site-name">
                    {{ article.author }}
                </span>
            
            </blockquote>
        {%- if article.excerpt.size > 0 -%}
        <p>
            {{ article.excerpt }}
            {%- else -%}
            {{ article.content | strip_html | truncate: 500 }}
        </p>
        {%endif%}
        
            <a class="btn btn-primary" href="{{ article.url }}">Read Now</a>
        </div>
               
            </div>
            <div class="col-6 pl-0">
                <img alt="things" class="img-fluid" src="{{article | img_url: '600x600'}}">
            </div>
        </div>
    </div>
{% endfor %}


<section>
    <div class="container text-center">
        
        
        <div class="row">
                    {% for article in blog.articles  %}
            <article class="col-lg-4 col-sm-12 mb-4">
                <div class="card h-100">
                    {% if article.image %}
                    <a href="{{ article.url }}"><img class="card-img-top" src="{{ article | img_url: '700x400' }}"
                            alt=""></a>
                    {% endif%}

                      <div class="card-body d-flex flex-column">
                        <blockquote class="blockquote ">
                            <span class="article-date">
                             {{ article.published_at | date: "%b %d, %y" }}
                            </span>
                           
                           <span class="site-name">
                                {{ article.author }}
                            </span>
                            
                        </blockquote>
                        <h4 class="card-title">
                            {{ article.title }}
                        </h4>
                        

                        <a class="read-more arrow mt-auto" href="{{ article.url }}">Read More</a>
                    </div>
                </div>
            </article>
            {% endfor %}
            
        </div>

    </div>
</section>
